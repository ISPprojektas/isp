@model Org.Ktu.Isk.P175B602.Autonuoma.Model.Uzsakymai

@{
	ViewData["title"] = "Užsakymo redagavimas";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>

<div class="container-fluid d-flex justify-content-center">
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	@Html.ValidationSummary(true, "", new { @class = "text-danger" })

	<fieldset class="border rounded shadow p-2">
		<div class="form-group">
			@Html.LabelFor(m => m.pk_Id, new { @class = "control-label" })
			@Html.EditorFor(m => m.pk_Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
			@Html.ValidationMessageFor(m => m.pk_Id, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.UzsakymoLaikas, new { @class = "control-label" })
			@Html.TextBoxFor(m => m.UzsakymoLaikas, "{0:yyyy-MM-dd hh:mm:ss}", new { @class = "form-control date-picker"})
			@Html.ValidationMessageFor(m => m.UzsakymoLaikas, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.UzsakymoKaina, new { @class = "control-label" })
			@Html.TextBoxFor(m => m.UzsakymoKaina, "{0:yyyy-MM-dd}", new { @class = "form-control"})
			@Html.ValidationMessageFor(m => m.UzsakymoKaina, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.ApmokejimoLaikas, new { @class = "control-label" })
			@Html.EditorFor(m => m.ApmokejimoLaikas, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.ApmokejimoLaikas, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Nuolaida, new { @class = "control-label" })
			@Html.EditorFor(m => m.Nuolaida, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Nuolaida, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Busena, new { @class = "control-label" })
			@Html.DropDownListFor(m => m.Busena, Model.Lists.Busenos, "--------------", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Busena, "", new { @class = "text-danger" })
		</div>

        <div class="form-group">
			@Html.LabelFor(m => m.fk_NaudotojasToString, new { @class = "control-label" })
			@Html.EditorFor(m => m.fk_NaudotojasToString, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
			@Html.ValidationMessageFor(m => m.fk_NaudotojasToString, "", new { @class = "text-danger" })
		</div>

        <div class="form-group">
			@Html.LabelFor(m => m.fk_ParduotuveToString, new { @class = "control-label" })
			@Html.EditorFor(m => m.fk_ParduotuveToString, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
			@Html.ValidationMessageFor(m => m.fk_ParduotuveToString, "", new { @class = "text-danger" })
		</div>
	</fieldset>

	<div class="container-fluid d-flex d-row justify-content-end">
		<button name="save" value="1" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Išsaugoti</button>
	</div>
}
</div>

<div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title"></span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>