@model Org.Ktu.Isk.P175B602.Autonuoma.Model.Uzsakymai
@{
    ViewData["title"] = "Užsakymo šalinimas";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div>
        <div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
            <span class="title">@ViewData["title"]</span>
            <span class="actions">
                <a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
            </span>
        </div>

        <div class="container-fluid d-flex justify-content-center">
        @using (Html.BeginForm()) 
        {
            @Html.AntiForgeryToken()

            <fieldset class="border rounded shadow p-2">
                <legend class="text-center">Ar tikrai norite šalinti šį užsakymą?</legend>

                <dl>
					<dt>@Html.DisplayNameFor(model => model.pk_Id)</dt>
                    <dd>@Html.DisplayFor(model => model.pk_Id)</dd>
					<dt>@Html.DisplayNameFor(model => model.UzsakymoLaikas)</dt>
                    <dd>@Html.DisplayFor(model => model.UzsakymoLaikas)</dd>
				    <dt>@Html.DisplayNameFor(model => model.UzsakymoKaina)</dt>
                    <dd>@Html.DisplayFor(model => model.UzsakymoKaina)</dd>
				    <dt>@Html.DisplayNameFor(model => model.ApmokejimoLaikas)</dt>
                    <dd>@Html.DisplayFor(model => model.ApmokejimoLaikas)</dd>
				    <dt>@Html.DisplayNameFor(model => model.Nuolaida)</dt>
                    <dd>@Html.DisplayFor(model => model.Nuolaida)</dd>
                    <dt>@Html.DisplayNameFor(model => model.BusenaToString)</dt>
                    <dd>@Html.DisplayFor(model => model.BusenaToString)</dd>
                    <dt>@Html.DisplayNameFor(model => model.fk_NaudotojasToString)</dt>
                    <dd>@Html.DisplayFor(model => model.fk_NaudotojasToString)</dd>
                    <dt>@Html.DisplayNameFor(model => model.fk_ParduotuveToString)</dt>
                    <dd>@Html.DisplayFor(model => model.fk_ParduotuveToString)</dd>
                </dl>

                @if( ViewData["deletionNotPermitted"] != null )
                {
                    <div class="alert alert-warning text-center">
                        <i class="fa-solid fa-circle-exclamation"></i> Šios užsakymo esybės trinti negalima, nes 
                        ji turi ryšių į priklausomas esybes.
                    </div>
                }
                else
                {
                    <div class="container-fluid d-flex d-row justify-content-end">
                        <button
                            formaction="@Url.Action("DeleteConfirm", new {id = Model.pk_Id})"
                            class="btn btn-danger"
                            style="white-space: nowrap;"
                        ><i class="fa-solid fa-trash"></i> Šalinti</button>
                    </div>			
                }
                
            </fieldset>
        }
        </div>

        <div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
            <span class="title"></span>
            <span class="actions">
                <a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
            </span>
        </div>
    </div>
</body>
</html>