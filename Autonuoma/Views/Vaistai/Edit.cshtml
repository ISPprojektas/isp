@model Org.Ktu.Isk.P175B602.Autonuoma.ViewModels.VaistaiEditVM

@{
	ViewData["title"] = "Vaistų redagavimas";
}

<div class="main-content-header container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title">@ViewData["title"]</span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>

<div class="container-fluid d-flex justify-content-center">
@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	@Html.ValidationSummary(true, "", new { @class = "text-danger" })

	<fieldset class="border rounded shadow p-2">
		<div class="form-group">
			@Html.LabelFor(m => m.Vaistai.ID, new { @class = "control-label" })
			@Html.EditorFor(m => m.Vaistai.ID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
			@Html.ValidationMessageFor(m => m.Vaistai.ID, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Vaistai.Pavadinimas, new { @class = "control-label" })
			@Html.EditorFor(m => m.Vaistai.Pavadinimas, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Vaistai.Pavadinimas, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Vaistai.NustatymoData, new { @class = "control-label" })
			@Html.TextBoxFor(m => m.Vaistai.NustatymoData, "{0:yyyy-MM-dd}", new { @class = "form-control date-picker"})
			@Html.ValidationMessageFor(m => m.Vaistai.NustatymoData, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Vaistai.Kaina, new { @class = "control-label" })
			@Html.EditorFor(m => m.Vaistai.Kaina, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(m => m.Vaistai.Kaina, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Vaistai.FkDarbuotojas, new { @class = "control-label" })
			@Html.DropDownListFor(m => m.Vaistai.FkDarbuotojas, Model.Lists.Darbuotojai, "--------------", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Vaistai.FkDarbuotojas, "", new { @class = "text-danger" })
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Vaistai.FkGyvunas, new { @class = "control-label" })
			@Html.DropDownListFor(m => m.Vaistai.FkGyvunas, Model.Lists.Gyvunai, "--------------", new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.Vaistai.FkGyvunas, "", new { @class = "text-danger" })
		</div>
	</fieldset>

	<div class="container-fluid d-flex d-row justify-content-end">
		<button name="save" value="1" class="btn btn-success"><i class="fa-solid fa-floppy-disk"></i> Išsaugoti</button>
	</div>
}
</div>

<div class="main-content-footer container-fluid d-flex d-row justify-content-between align-items-center">
	<span class="title"></span>
	<span class="actions">
		<a href="@Url.Action("Index")" class="link-primary"><i class="fa-solid fa-angles-left"></i> Atgal į sarašą</a>
	</span>
</div>